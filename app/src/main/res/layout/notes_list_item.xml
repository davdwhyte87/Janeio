<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_note_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_list_view"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:backgroundTint="@color/light_grey"

    >

    <TextView
        android:id="@+id/notes_recycler_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kolllor osuld is the man...."
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="@dimen/text_padding2"
        android:textColor="@color/black"
        android:paddingEnd="@dimen/text_padding2"
        android:paddingTop="@dimen/notes_list_item_spacing"
        android:paddingBottom="@dimen/notes_list_item_spacing"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/notes_recycler_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_padding2"
            android:paddingEnd="@dimen/text_padding2"
            android:text="We plan on making sure that the men who "
            android:textSize="@dimen/text_body"
            android:paddingTop="@dimen/notes_list_item_spacing"
            android:textColor="@color/black2"
            android:paddingBottom="@dimen/notes_list_item_spacing"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <ImageView
                android:id="@+id/folder_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_folder_24"
                android:layout_gravity="right"
                android:padding="@dimen/text_padding"

                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/notes_recycler_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/text_padding2"
        android:paddingEnd="@dimen/text_padding2"
        android:text="26th feb 2023."
        android:textSize="@dimen/text_small"
        android:paddingTop="@dimen/notes_list_item_spacing"
        android:paddingBottom="@dimen/notes_list_item_spacing"
        android:textColor="@color/black2"
        />

</LinearLayout>
